<section class="main-cover">
    <!-- The overlay -->
    <div class="cover-overlay"></div>
    <div id="learn-more" class="overlay">

        <!-- Button to close the overlay navigation -->
        <a href="#" id="closebtn" class="sticky closebtn" onclick="closeNav()">&times;</a>

        <!-- Overlay content -->
        <div class="overlay-content">
            <div class="about-main-grid">
                <div class="about-sub-grid">
                    <div class="about">
                        <h2>About Mao Mun Tai</h2>
